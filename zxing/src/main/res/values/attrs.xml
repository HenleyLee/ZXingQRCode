<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--corner_color 边角颜色，
        scanner_color 扫描线颜色
        possible_result_color 扫描点颜色
        frame_color 扫描框边线颜色
        mask_color 模糊区域颜色
        label_text  框上方提示
    -->
    <declare-styleable name="ViewfinderView">
        <!-- 边角颜色 -->
        <attr name="corner_color" format="color|reference" />
        <attr name="laser_color" format="color|reference" />
        <!-- 扫描框边线颜色 -->
        <attr name="frame_color" format="color|reference" />
        <!-- 模糊区域颜色 -->
        <attr name="mask_color" format="color|reference" />
        <attr name="result_point_color" format="color|reference" />
        <attr name="result_color" format="color|reference" />
        <attr name="label_text" format="string|reference" />
        <attr name="label_text_color" format="color|reference" />
        <attr name="label_text_size" format="dimension|reference" />
    </declare-styleable>

</resources>
